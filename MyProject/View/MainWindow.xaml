<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1080" Width="1920">

    <Window.Background>
        <ImageBrush ImageSource="C:\Users\maksi\source\repos\MyProject\MyProject\Photo\Project.jpg" />
    </Window.Background>

    <Grid>
        <StackPanel Orientation="Vertical" Margin="421,18,421,532">
            <Button Content="Личный кабинет"  Height="48" Width="130" Click="OpenPersonalAccount_Click" />
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">

            <TextBlock Text="Путешествуй с Цифрой" Foreground="Lavender" FontSize="20" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Идеи для поездок" Foreground="White" Background="Transparent" Margin="5,0" Click="Ideas_Click"/>
                <Button Content="Фишки" Foreground="White" Background="Transparent" Margin="5,0" Click="Tips_Click"/>
                <Button Content="Помощь" Foreground="White" Background="Transparent" Margin="5,0" Click="Help_Click"/>
            </StackPanel>
            


            <Border Background="White" CornerRadius="10" Padding="0" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Width="100" Margin="5" Text="Откуда" Opacity="0.5"/>
                    <TextBlock Text="➔" VerticalAlignment="Center"/>
                    <TextBox Width="100" Margin="5" Text="Куда" Opacity="0.5"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Туда" Margin="5,0,0,0" />
                        <DatePicker Width="100" Margin="5" SelectedDate="{Binding DepartureDate}" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Обратно" Margin="5,0,0,0"/>
                        <DatePicker Width="100" Margin="5" SelectedDate="{Binding ReturnDate}" />
                    </StackPanel>
                    <ComboBox Width="150" Height="30" Margin="5">
                        <ComboBoxItem Content="1 пассажир, эконом" />
                        <ComboBoxItem Content="2 пассажира, эконом" />
                    </ComboBox>
                    <Button Content="Найти билеты" Background="#9F37FF" Foreground="White" Width="120" Margin="5"/>
                </StackPanel>
            </Border>



            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </StackPanel>
      
    </Grid>
</Window>


